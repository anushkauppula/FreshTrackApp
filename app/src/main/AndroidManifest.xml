<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Add permissions for storage and camera -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FreshTrack"
        tools:targetApi="31">
        
        <activity
            android:name=".DashboardActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".DetailPage"
            android:exported="false" />
        <activity
            android:name=".AddListActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivityForgotPassword"
            android:exported="false" />
        <activity
            android:name=".MainActivitySignup"
            android:exported="false" />
        <activity
            android:name=".MainActivityAuthentication"
            android:exported="false" />
        <activity
            android:name=".MainActivityHome"
            android:exported="false" />
        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:label="Profile"/>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.freshtrack.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>